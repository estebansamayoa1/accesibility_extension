{
  "name": "Infinity Access",
  "description": "Accesibilidad sin LÃ­mites",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "infinity_access_menu.html",
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["color-filter.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
